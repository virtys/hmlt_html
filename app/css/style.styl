    opacity .3;
    position absolute;
    min-width 160px;
    background-color rgba(0,0,0, .98);
    text-align left;
    padding 10px 10px;
    left: 0;
    transform translateX(-25%) translateY(10px);
    transition opacity .4s ease, transform .4s ease;
    li
      padding 4px 4px;
    a
      color: #f4f4f4;
      font-size em(13px);

@media only screen and (max-width: 1024px) {
