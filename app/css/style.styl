  left: 0;
  top: 0;
  background-color: #fff;
  z-index: 1;
}

.loader3:before{
  content: "";
  position: absolute;
  background-color: primaryColor;
  bottom: -15px;
  left: 0px;
  height: 5px;
  width: 0px;
  z-index: 0;
  opacity: 1;
  transform-origin:  100% 0% ;
  animation: loader3 5s ease-in-out infinite;
}

@keyframes loader3{
  0%{width: 0px;}
  70%{width: 100%; opacity: 1;}
  90%{opacity: 0; width: 100%;}
  100%{opacity: 0;width: 0px;}
}
