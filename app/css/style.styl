}
.button--effect::before,
.button--effect::after {
  content: '';
  position: absolute;
  height: 100%;
  width: 100%;
  bottom: 100%;
  left: 0;
  z-index: -1;
  transition: transform 0.3s;
  transition-timing-function: cubic-bezier(0.75, 0, 0.125, 1);
}

.button--effect::before {
  background: primaryColor;
  opacity .5;
}
.button--effect::after {
  background: primaryColor;
}
.button--effect:hover {
  color: #fff;
}
.button--effect.button--filled:after {
  background: #fff;
}
.button--effect.button--filled:hover {
  color: colorDefault;
}

.button--effect:hover::before,
.button--effect:hover::after {
  transform: translate3d(0, 100%, 0);
}
.button--effect:hover::after {
  transition-delay: 0.175s;
}

